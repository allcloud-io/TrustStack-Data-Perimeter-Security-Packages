{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "ES2020"
    ],
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "node"
    ],
    "typeRoots": [
      "../node_modules/@types",
      "../types"
    ],
    "allowJs": true
  },
  "include": [
    "*.ts",
    "eslint.config.mjs",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}